<Window x:Class="ECF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECF"
        mc:Ignorable="d"
        Title="Gestion des hotels" Height="450" Width="800" Background="#FF92EED9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnChambre" Content="Gestion des Chambres" Grid.Column="1"  Grid.Row="1" Style="{DynamicResource RoundCorner}" Click="btnChambre_Click" FontSize="{DynamicResource FontSize}" />
        <Button x:Name="btnHotel" Content="Gestion des Hotels" Grid.Column="1"  Grid.Row="3" Style="{DynamicResource RoundCorner}"  Click="btnHotel_Click"  />

    </Grid>
</Window>
